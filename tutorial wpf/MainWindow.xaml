<NavigationWindow
    x:Class="tutorial_wpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:tutorial_wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Nogometni klub Smoljanci Sloboda"
    Width="800"
    Height="500"
    Source="MainPage.xaml" 
    Loaded="Window_Load"
    Icon="ikona.ico"
    >
    <Window.Resources>
        <CollectionViewSource x:Key="playersViewSource" Source="{Binding Players}"/>
        <CollectionViewSource x:Key="matchesViewSource" Source="{Binding Matches}"/>
        <CollectionViewSource x:Key="footballClubsViewSource" Source="{Binding FootballClubs}"/>
    </Window.Resources>
</NavigationWindow>

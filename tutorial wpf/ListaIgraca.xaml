<Page
    x:Class="tutorial_wpf.ListaIgraca"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:tutorial_wpf"
    Title="Lista Igraca"
    Width="785"
    Height="450"
    Loaded="Page_Loaded">
    <Page.Resources>
        <CollectionViewSource x:Key="playersViewSource" Source="{Binding Players}" />
    </Page.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <ListView
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                Background="AntiqueWhite"
                ItemsSource="{Binding Source={StaticResource playersViewSource}}"
                MouseDoubleClick="OnPlayerSelect"
                TextBlock.Foreground="Black">
                <ListView.View>
                    <GridView>
                        <GridViewColumn
                            Width="100"
                            DisplayMemberBinding="{Binding Name}"
                            Header="Ime" />
                        <GridViewColumn
                            Width="100"
                            DisplayMemberBinding="{Binding Age}"
                            Header="Godine" />
                        <GridViewColumn
                            Width="100"
                            DisplayMemberBinding="{Binding Category}"
                            Header="Kategorija" />
                        <!--<GridViewColumn Header="Klub">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding CurrentClub.Name, FallbackValue=Nije u klubu}" />
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding CurrentClub.Name}" Value="{x:Null}" />
                                        <DataTrigger Binding="{Binding CurrentClub.Name}" Value="" />
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>-->
                        <GridViewColumn
                            Width="100"
                            DisplayMemberBinding="{Binding Position}"
                            Header="Pozicija" />
                        <GridViewColumn
                            Width="100"
                            DisplayMemberBinding="{Binding MarketValue}"
                            Header="Vrijednost" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </ScrollViewer>
</Page>
